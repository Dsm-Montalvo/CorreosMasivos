extends ../layout/super

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")
    style.
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom, #46b8a9, #FFFFFF);
            background-size: cover;
            z-index: -1; 
        }
        .form-container {
            background-color: rgba(255, 255, 255, 0.5); 
            border-radius: 0.8rem; 
        }

block contenido
    div.py-10 
        h1.text-4xl.my-10.font-extrabold.text-center  Fundación México Sin Sordera 
            span.font-normal  A.C
        h2.text-center.text-2xl.font-extrabold NUEVO DONADOR

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div(class="form-container shadow-lg py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            div.flex.justify-center.mb-6
                img(src="/img/logo/logo-mexico-sin-sordera-2023.png" alt="Logo" style="height: 9.5rem; width: auto;")
            br
            h1.text-center.text-2xl.font-bold Registra los Datos del Nuevo Donador

            form.space-y-8(method="POST" action="/admin/donadores/crear")
                input(type="hidden" name="_csrf" value=csrfToken)

                div.space-y-5
                    div
                        label.block.text-sm.uppercase.text-black.mb-2.font-bold(for="nombre") Nombre
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Nombre del Donador" type="text" name="nombre" required)

                    div
                        label.block.text-sm.uppercase.text-black.mb-2.font-bold(for="gmaildonador") Correo Electrónico del Donador
                        input#gmaildonador.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Correo Electrónico" type="email" name="gmaildonador" required)

                    div
                        label.block.text-sm.uppercase.text-black.mb-2.font-bold(for="telefono") Teléfono
                        input#telefono.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Teléfono" type="tel" name="telefono" required)

                    div
                        label.block.text-sm.uppercase.text-black.mb-2.font-bold(for="telcontacto") Teléfono de Contacto
                        input#telcontacto.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Teléfono de Contacto" type="tel" name="telcontacto" required)

                    div
                        label.block.text-sm.uppercase.text-black.mb-2.font-bold(for="empresa") Empresa
                        input#empresa.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Empresa" type="text" name="empresa" required)

                    div
                        label.block.text-sm.uppercase.text-black.mb-2.font-bold(for="montodonado") Monto Donado
                        input#montodonado.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Monto Donado" type="text" name="montodonado" required)

                input(class="w-full py-3 bg-verde-pantone hover:bg-azul-tur rounded text-white font-bold uppercase cursor-pointer" type="submit" value="Agregar Donador")
                