extends ../layout/super

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")
    style.
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom, #46b8a9, #FFFFFF);
            background-size: cover;
            z-index: -1; 
        }
block contenido 
    div.py-10 
        h1.text-4xl.my-10.font-extrabold.text-center  Fundación México Sin Sordera A.C
            
        h2.text-center.text-2xl.font-extrabold

        if errores || mensajes
            div(class="max-w-md mx-auto my-10")
                if errores
                    each error in errores 
                        p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
                if mensajes
                    each mensaje in mensajes
                        p.bg-green-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= mensaje.msg

        h1(class="text-center text-3xl font-extrabold ") Sistema Privado de correos
