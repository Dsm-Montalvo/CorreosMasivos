extends ../layout/super

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")
    style.
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom, #46b8a9, #FFFFFF);
            background-size: cover;
            z-index: -1; 
        }
        .arrow-list li {
            position: relative;
            padding-left: 2rem; /* Espacio para la flecha */
        }
        .arrow-list li::before {
            content: '→'; /* Flecha como viñeta */
            color: #1522F0; /* Color de la flecha */
            font-size: 1rem; /* Tamaño de la flecha */
            position: absolute;
            left: 0;
            top: 0;
        }
        .arrow-list {
            list-style-type: none; /* Elimina las viñetas predeterminadas */
            padding-left: 0; /* Elimina el padding por defecto */
        }

block contenido 
    div.py-10 
        

       

        if errores || mensajes
            div(class="max-w-md mx-auto my-10")
                if errores
                    each error in errores 
                        p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
                if mensajes
                    each mensaje in mensajes
                        p.bg-green-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= mensaje.msg

        div.flex.justify-center.my-10
