extends ../layout/super

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")
    style.
        table {
            width: 100%;
            border-collapse: collapse;
        }
        thead {
            background-color: #f8f8f8;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        tr:hover {
            background-color: #ddd;
        }
        th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #4CAF50;
            color: white;
        }
        

block contenido
    div.py-20 
        h1.text-4xl.my-10.font-extrabold.text-center  FSFLMX
            span.font-normal  Sin Sordera
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
        if mensajes
            div(class="max-w-md mx-auto my-10")
                each mensaje in mensajes
                    p.bg-green-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= mensaje.msg

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4x1 my-10 md:px-10")

            div.flex.justify-between
                a(href="/admin/donadores/crear" class="rounded px-10 py-2 bg-green-600 hover:bg-green-900 text-sm font-bold text-center text-white uppercase my-5 inline-block w-full md:w-auto") Agregar a la lista de Correos
                div.relative.w-full.max-w-md
                    input#search(type="text" placeholder="Buscar Donador..." class="border border-black-300 rounded py-2 pl-10 pr-3 w-full text-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500")

            if donadores.length
                table
                    thead
                        tr
                            th.text-left Nombre
                            th.text-left Correo Electrónico
                            th.text-left Teléfono
                            th.text-left Teléfono de Contacto
                            th.text-left Empresa
                            th.text-left Acciones
                    tbody#donadores-table
                        include _donadoresTable 
            else
                p.text-center No hay donadores registrados.

            if totalPages > 1
                ul.pagination.flex.justify-center.mt-5
                    li.page-item(class=currentPage === 1 || totalPages === 0 ? 'hidden' : '')
                        a.page-link(href=`/admin/donadores?page=${currentPage - 1}`) Anterior

                    - for(let i = 1; i <= totalPages; i++)
                        li.page-item(class=i === currentPage ? 'active' : '')
                            a.page-link(href=`/admin/donadores?page=${i}`)= i

                    li.page-item(class=currentPage === totalPages || totalPages === 0 ? 'hidden' : '')
                        a.page-link(href=`/admin/donadores?page=${currentPage + 1}`) Siguiente

                
            div.flex
                a(href="/admin/donadores/pdf" class="rounded px-10 py-2 bg-indigo-600 hover:bg-indigo-900 text-sm font-bold text-center text-white uppercase my-5 inline-block w-full md:w-auto") Descargar PDF
                a(href="/admin/donadores/excel" class="rounded px-10 py-2 bg-red-600 hover:bg-red-900 text-sm font-bold text-center text-white uppercase my-5 inline-block w-full md:w-auto") Descargar Excel



block scripts
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    script.
        function confirmDelete(id) {
            if (confirm("¿Estás seguro de que quieres eliminar este donador?")) {
                window.location.href = `/admin/donadores/eliminar/${id}`;
            }
        }
        function fetchDonadores(query = '', page = 1) {
            $.ajax({
                url: '/admin/donadores',
                method: 'GET',
                data: { search: query, page: page },
                success: function(response) {
                    $('#donadores-table').html(response);
                },
                error: function(error) {
                    console.error(error);
                }
            });
        }

        $(document).ready(function() {
            $('#search').on('keyup', function() {
                const query = $(this).val();
                fetchDonadores(query);
            });
        });

        function changePage(page) {
            const query = $('#search').val();
            fetchDonadores(query, page);
        }